@model SinhVienModel
@{ ViewData["Title"] = "DoiMatKhau";
    Layout = "~/Views/Shared/_ThirdLayout.cshtml"; }
<script src="/template/sneat//assets/vendor/js/bootstrap.js"></script>
<div class="container-fluid pt-5" style="margin-top:-50px">
    <div class="text-center mb-4">
        <h3 class="section-title px-5"><span class="px-2">Đổi mật khẩu</span></h3>
    </div>
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-12">
            <div class="mb-4">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Mật khẩu hiện tại</label>
                        <input class="form-control" type="text" placeholder="" id="input1">
                        <a id="tb1"></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Mật khẩu mới</label>
                        <input class="form-control" type="text" placeholder="" id="input2">
                        <a id="tb2"></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Xác nhận mật khẩu mới</label>
                        <input class="form-control" type="text" placeholder="" id="input3">
                        <a id="tb3"></a>
                    </div>
                </div>

                <div class="col-md-12 form-group" style="text-align: left" id="bar-button">
                    <button class="btn btn-primary" onclick="DoiMK()">Đổi mật khẩu</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function DoiMK() {
        var passcu = document.getElementById("input1").value;
        var passmoi1 = document.getElementById("input2").value;
        var passmoi2 = document.getElementById("input3").value;
        var txt = "";
        if (passcu == txt || passmoi1 == txt || passmoi2 == txt) {
            alert("Bạn chưa nhập đủ thông tin");
        }
        else if (passcu == passmoi1) {
            alert("Mật khẩu mới phải khác mật khẩu cũ");
        }
        else if (passmoi1 != passmoi2) {
            alert("Xác nhận mật khẩu mới không đúng");
        }
        else {
            $.ajax({
                url: '/TaiKhoan/DoiMK',
                type: 'post',
                data: {
                    mkcu: passcu,
                    mkmoi1: passmoi1,
                },
                success: function (data) {
                    alert(data);
                    window.location.reload();
                }
            })
        }

    }
</script>

