<body>
    <div class="container-xxl" >
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <div class="card">
                    <div class="card-body">
                        <div class="app-brand justify-content-center">
                            <a href="index.html" class="app-brand-link gap-2">
                                <span class="app-brand-logo demo">

                                </span>
                                <a href="@Url.Action("Index","SanPham")" class="text-decoration-none">
                                    <h2 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold "><img src="~/template/img/LogoSV2.png" height="80px" /></span></h2>
                                </a>
                            </a>
                        </div>
                        <form class="mb-3" asp-action="DangKy" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Tài khoản</label>
                                <input type="text"
                                       class="form-control"
                                       id="mssv"
                                       asp-for="MSSV"
                                       autofocus />
                                <span asp-validation-for="MSSV" class="text-danger" ></span>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Họ & tên</label>
                                <input type="text"
                                       class="form-control"
                                       id="hoten"
                                       asp-for="HoTen" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Mật khẩu</label>

                                </div>
                                <div class="input-group input-group-merge">
                                    <input type="password"
                                           id="mk"
                                           class="form-control"
                                           asp-for="MatKhau"
                                           placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                           aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                <span asp-validation-for="MatKhau" class="text-danger" ></span>
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Xác nhận mật khẩu</label>

                                </div>
                                <div class="input-group input-group-merge">
                                    <input type="password"
                                           id="xnmk"
                                           class="form-control"
                                           asp-for="XacNhanMatKhau"
                                           placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                           aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Số điện thoại</label>
                                <input type="text"
                                       class="form-control"
                                       id="sdt"
                                       asp-for="SDT" />
                                <span asp-validation-for="SDT" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="text"
                                       class="form-control"
                                       id="email"
                                       asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger" ></span>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Địa chỉ</label>
                                <input type="text"
                                       class="form-control"
                                       id="dc"
                                       asp-for="DiaChi" />
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />
                                    <label class="form-check-label" for="terms-conditions">
                                        Tôi đồng ý với
                                        <a href="javascript:void(0);">các điều khoản</a>
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary d-grid w-100">Đăng ký</button>
                        </form>

                        <p class="text-center">
                            <span>Bạn đã có tài khoản?</span>
                            <a href="@Url.Action("DangNhap","TaiKhoan")">
                                <span>Đăng nhập</span>
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

