    // Hien danh muc
    function HienDanhMuc(data) {
        var str = "";
        for (var i in data) {
            if (data[i].danhmuccon.length > 1) {
                str += '<div class="nav-item dropdown">'
                str += '<a href="#" class="nav-link danhmuc" data-toggle="dropdown">' + data[i].ten + ' <i class="fa fa-angle-down float-right mt-1"></i></a>'
                str += '<div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">'
                for (var x in data[i].danhmuccon) {
                    str += '<a class="dropdown-item" href="/SanPham/TimKiemTheoLoai?maloai=' + data[i].danhmuccon[x].id + '">' + data[i].danhmuccon[x].ten + '</a>'
                }
                str += '</div>'
                str += '</div>'
            }
            else {
                str += '<a class="dropdown-item" href="/SanPham/TimKiemTheoLoai?maloai=' + data[i].danhmuccon[0].id + '">' + data[i].danhmuccon[0].ten + '</a>'
            }
        }
        document.getElementById('DMSP').innerHTML = str;
    }

    // load danh muc
    function LoadDanhMuc() {
        $.ajax({
            url: '/SanPham/DanhMucSanPham',
            type: 'get',
            success: function (data) {
                HienDanhMuc(data)
            }
        })
    }

    // ready
    $(document).ready(function () {
        LoadDanhMuc();
    })
</script>