<script src="~/js/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        Dem();
        DemSP();
        DemBai1();
    });
    
    function Dem() {
        console.log("dem");
        var x;
        $.ajax({
            url: '/Admin/DemSV',
            type: 'post',
            success: function (data) {
                document.getElementById('dem').innerHTML = data;
                x = data;
                console.log(x);
            }
        })
        document.getElementById('dem').innerHTML = x;
    }
    function DemSP() {
        var x;
        $.ajax({
            url: '/Admin/DemSP',
            type: 'post',
            success: function (data) {
                document.getElementById('demsp').innerHTML = data;
                x = data;
                console.log(x);
            }
        })
    }
    function DemBai1() {
        $.ajax({
            url: '/Admin/DemBai1',
            type: 'post',
            success: function (data) {
                document.getElementById('bai1').innerHTML = data;
            }
        })
    }
</script>
