@model SanPhamModel
@{ ViewData["Title"] = "ChiTietSanPham";
                Layout = "~/Views/Shared/_ThirdLayout.cshtml"; }

@{ string dongia = string.Format("{0:#,##0.########}", Model.dongiasp);
                string giagoc = string.Format("{0:#,##0.########}", Model.giagocsp); }

<!-- build:js assets/vendor/js/core.js -->
