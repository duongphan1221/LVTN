<script>
    function Them1VaoGio(ma) {
        $.ajax({
            url: '/GioHang/Them1SanPhamVaoGioHang',
            type: 'post',
            data: {
                mssp: ma,
            },
            success: function (data) {
                hiensanphamtronggio();
                tempAlert(2000);
            },
            error: function () {
                window.location.href = '/TaiKhoan/DangNhap';
            }
        })
    }
    function tempAlert(duration) {
        var el = document.getElementById('alertdiv');

        var str = '';
        str += '<div><i class="fa fa-check-circle-o "></i></div>';
        str += '<div><p><strong>Đã thêm vào giỏ</strong></p></div>';

        el.innerHTML = str;
        el.style.display = "unset";
        setTimeout(function () {
            el.innerHTML = "";
            el.style.display = "none";
        }, duration);
        document.body.appendChild(el);
    }
    function DoCaNhan() {
        window.location.href = '/SanPham/DoCaNhan';
    }

    function DoDienTu() {
        window.location.href = '/SanPham/DoDienTu';
    }

    function DoNoiThat() {
        window.location.href = '/SanPham/DoNoiThat';
    }

    function DoHocTap() {
        window.location.href = '/SanPham/DoHocTap';
    }

    function PhuongTien() {
        window.location.href = '/SanPham/PhuongTien';
    }

    function DoKhac() {
        window.location.href = '/SanPham/DoKhac';
    }
</script>